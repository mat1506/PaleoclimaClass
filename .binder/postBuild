#!/bin/bash
# Instalar y registrar el kernel de R
R -e "IRkernel::installspec(user = FALSE)"

# Instalar el kernel de Python (opcional)
python -m ipykernel install --sys-prefix

# Instalar paquetes de Python faltantes
pip install --no-cache-dir pyleoclim

# Imprimir un mensaje indicando que el entorno est√° listo
echo "Binder environment is ready!"

conda install mamba -n base -c conda-forge
mamba env update -n cpaleo --file environment.yml

